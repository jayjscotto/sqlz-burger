
<h1 class="title">{{title}}</h1>

<div class="burgers text-center">
    <div class="row">
        <div class="col-6">
            <h5>Ready to Eat</h5>
            <ul>
                {{#each burgersObj.burgers}}
                    {{#unless eaten}}
                        {{> burgerblock eaten=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-6">
            <h5>Already Eaten</h5>
            <ul>
                {{#each burgersObj.burgers}}
                    {{#if eaten}}
                        {{> burgerblock eaten=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>


<div id="user-input" class="col-5 mx-auto mt-4">
    <h3 class="text-center">Create Your Burger</h3>
    <form class="mx-auto">
        <div class="form-group col-8 mx-auto text-center">
            <input type="text" class="form-control" id="burger-input" placeholder="Your Burger Here">
            <button type="submit" id="burger-submit" class="btn mx-auto my-3">Submit</button>
        </div>
        
    </form>
</div>
